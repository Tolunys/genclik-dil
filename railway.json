{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
      "builder": "NIXPACKS",
      "buildCommand": "npm install"
    },
    "deploy": {
      "startCommand": "npm start",
      "restartPolicyType": "ON_FAILURE",
      "restartPolicyMaxRetries": 10
    },
    "services": {
      "web": {
        "domains": ["genclik-dil.up.railway.app"],
        "ports": [
          {
            "port": 8080,
            "protocol": "http"
          }
        ],
        "healthcheck": {
          "path": "/",
          "interval": 10,
          "timeout": 5,
          "retries": 5
        },
        "envVars": {
          "PORT": "8080"
        }
      }
    },
    "variables": {
      "PORT": "8080"
    }
  }